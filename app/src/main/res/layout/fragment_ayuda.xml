<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_appbar"
        android:elevation="8dp"
        app:elevation="8dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Ayuda y Soporte"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.MarketLink.Toolbar.Title"
            app:navigationIconTint="@color/white"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_search"
                style="@style/Widget.MarketLink.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar en ayuda..."
                android:layout_marginBottom="24dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:imeOptions="actionSearch" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Section: Módulos Principales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Módulos Principales"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header: Question -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_1_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_1_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="¿Cómo crear una nueva empresa comercial?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_1_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_1_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_1_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Body: Answer (initially hidden) -->
                    <TextView
                        android:id="@+id/tv_faq_1_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="Para crear una nueva empresa comercial, navegue a 'Perfiles Comerciales' desde el menú lateral o el Dashboard. Haga clic en el botón flotante '+' en la esquina inferior derecha. Complete todos los campos requeridos: nombre, RUC, teléfono, correo electrónico y seleccione el plan de suscripción. Una vez completado, haga clic en 'Guardar'."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Item 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_2_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_2_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="¿Cómo ver el estado de un pedido?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_2_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_2_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_2_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_faq_2_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="Para ver el estado de un pedido, navegue a la sección 'Pedidos' desde el menú principal. En la lista de pedidos, cada tarjeta muestra el estado actual (Pendiente, En Ruta, Entregado) mediante un borde de color lateral. También puede usar los filtros de estado en la parte superior para ver solo pedidos de un estado específico."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Item 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_3_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_3_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="¿Cómo añadir un nuevo producto?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_3_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_3_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_3_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_faq_3_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="Para añadir un nuevo producto, acceda a 'Catálogo e Inventario' desde el Dashboard. Haga clic en el botón flotante '+' ubicado en la esquina inferior derecha. Complete el formulario con el nombre del producto, precio, descripción y opcionalmente suba una imagen. Una vez completado, presione 'Guardar' para agregar el producto al catálogo."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Gestión de Usuarios y Roles -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de Usuarios y Roles"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Item 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_4_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_4_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="¿Cuál es la diferencia entre el rol 'Administrador' y 'Repartidor'?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_4_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_4_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_4_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_faq_4_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="El rol 'Administrador' tiene acceso completo al sistema: puede gestionar usuarios, empresas, productos, ver reportes y configurar la aplicación. El rol 'Repartidor' tiene acceso limitado principalmente a la visualización de pedidos asignados y la actualización de su estado de entrega. Los Administradores pueden crear y modificar repartidores, mientras que los Repartidores solo pueden ver y actualizar sus propias asignaciones."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Item 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_5_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_5_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="¿Cómo desactivar una cuenta de usuario?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_5_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_5_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_5_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_faq_5_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="Para desactivar una cuenta de usuario, acceda a 'Gestión de Usuarios' desde el menú lateral. Seleccione el usuario que desea desactivar haciendo clic en su tarjeta. En la pantalla de detalle, encontrará el botón 'Desactivar Cuenta' en color naranja. Al hacer clic, se le solicitará confirmación antes de proceder. Una cuenta desactivada no podrá iniciar sesión hasta que sea reactivada por un administrador."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Solución de Problemas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solución de Problemas"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Item 6 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_6_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_6_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="¿Qué hacer si un repartidor no puede ver la dirección en el mapa?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_6_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_6_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_6_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_faq_6_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="Si un repartidor no puede ver la dirección en el mapa, verifique primero que la aplicación tenga permisos de ubicación activos. Si el problema persiste, verifique la conexión a internet del dispositivo. También puede intentar cerrar y reabrir la aplicación, o reiniciar el dispositivo. Si la dirección sigue sin aparecer, contacte al soporte técnico con el número de pedido y la dirección problemática."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Item 7 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faq_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_faq_7_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help_outline"
                            app:tint="@color/colorPrimary"
                            android:contentDescription="FAQ"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_faq_7_question"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="La aplicación se cierra inesperadamente, ¿qué hago?"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/iv_faq_7_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_faq_7_expand"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/iv_faq_7_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/colorTextSecondary"
                            android:contentDescription="Expandir"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_faq_7_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="12dp"
                        android:text="Si la aplicación se cierra inesperadamente, primero intente cerrar completamente la aplicación desde el menú de aplicaciones recientes y volver a abrirla. Si el problema persiste, verifique que su dispositivo tenga suficiente espacio de almacenamiento disponible. También puede intentar reiniciar el dispositivo. Si los cierres continúan, desinstale y reinstale la aplicación desde la tienda de aplicaciones. Si nada de esto funciona, contacte al soporte técnico con detalles sobre cuándo ocurre el cierre."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacto Directo"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Chat Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chat"
                style="@style/Widget.Material3.Button"
