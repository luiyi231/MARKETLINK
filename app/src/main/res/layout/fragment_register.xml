<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa tus datos para comenzar"
            android:textSize="16sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="24dp" />

        <!-- Nombre Completo -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo"
            style="@style/Widget.MarketLink.TextInputLayout"
            android:layout_marginBottom="16dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="?attr/colorSurface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nombre_completo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:minHeight="56dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electr贸nico"
            style="@style/Widget.MarketLink.TextInputLayout"
            android:layout_marginBottom="16dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="?attr/colorSurface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:minHeight="56dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tel茅fono -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tel茅fono"
            style="@style/Widget.MarketLink.TextInputLayout"
            android:layout_marginBottom="16dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="?attr/colorSurface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:minHeight="56dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contrase帽a -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase帽a"
            style="@style/Widget.MarketLink.TextInputLayout"
            app:endIconMode="password_toggle"
            android:layout_marginBottom="16dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="?attr/colorSurface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:minHeight="56dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirmar Contrase帽a -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Contrase帽a"
            style="@style/Widget.MarketLink.TextInputLayout"
            app:endIconMode="password_toggle"
            android:layout_marginBottom="20dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="?attr/colorSurface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:minHeight="56dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de Usuario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Usuario"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <RadioGroup
                android:id="@+id/rg_tipo_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/rb_emprendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Emprendedor - Vendo productos"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextPrimary"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:buttonTint="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextSecondary"
                    android:alpha="0.2"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <RadioButton
                    android:id="@+id/rb_consumidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Consumidor - Compro productos"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextPrimary"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:buttonTint="@color/colorPrimary" />

            </RadioGroup>

        </com.google.android.material.card.MaterialCardView>

        <!-- Campos adicionales para Cliente (inicialmente ocultos) -->
        <LinearLayout
            android:id="@+id/ll_cliente_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Ciudad -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad"
                style="@style/Widget.MarketLink.TextInputLayout"
                android:layout_marginBottom="16dp"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="?attr/colorSurface"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/actv_ciudad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:minHeight="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Direcci贸n Cliente -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direcci贸n (Opcional)"
                style="@style/Widget.MarketLink.TextInputLayout"
                android:layout_marginBottom="16dp"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_direccion_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:minHeight="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Campos adicionales para Empresa (inicialmente ocultos) -->
        <LinearLayout
            android:id="@+id/ll_empresa_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Raz贸n Social -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Raz贸n Social"
                style="@style/Widget.MarketLink.TextInputLayout"
                android:layout_marginBottom="16dp"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_razon_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:minHeight="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- NIT -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIT"
                style="@style/Widget.MarketLink.TextInputLayout"
                android:layout_marginBottom="16dp"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Direcci贸n -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direcci贸n"
                style="@style/Widget.MarketLink.TextInputLayout"
                android:layout_marginBottom="16dp"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:minHeight="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Bot贸n Registrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Crear Cuenta"
            style="@style/Widget.MarketLink.Button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Link a Login -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驴Ya tienes cuenta? "
                android:textColor="@color/colorTextSecondary" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia Sesi贸n"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
